    <body>
      <div class="container">
        <h1 class="display-4 text-center py-1">Student Data Management System</h1>
        
        <div class="jumbotron p-3 shadow-sm">
         
            <div class="d-flex align-items-center">
              <form action='/create-student' method="POST">  
                <div class="container">   
                    <label for="rollno">Rollno. : </label>   
                    <input type="number" placeholder="Enter rollno." name="rollno" required>  
                    <label for="name">Name : </label>   
                    <input type="text" placeholder="Enter Name" name="name" required>  
                    <label for="email">Email : </label>  
                    <input type="text" placeholder="Enter Email" name="email" required>  
                    
                    <button type="submit">Add student</button>   
                </div>   
            </form>    
            </div>
         
        </div>

        <ul id="item_list" class=""list-group pb-5>


        </ul>
    
        <button class="show_more">Show more</button>
        <br/>
        <br/>
      <form action='/logout' method="POST">
        <button> Logout <button>
      </form>
      <form action='/logout_from_all_devices' method="POST">
        <button> Logout from all devices <button>
      </form>

      </div>
